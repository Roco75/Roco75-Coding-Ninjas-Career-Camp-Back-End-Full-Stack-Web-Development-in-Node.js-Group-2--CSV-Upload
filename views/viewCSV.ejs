<html>
<head>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Viewing: <%= filename %></h1>

        <!-- Search box -->
        <input type="text" id="searchBox" placeholder="Search...">
        
        <!-- CSV Table -->
        <table id="csvTable">
            <thead>
                <tr>
                    <% headers.forEach(function(header) { %>
                        <th><%= header %></th>
                    <% }) %>
                </tr>
            </thead>
            <tbody>
                <% rows.forEach(function(row) { %>
                    <tr>
                        <% headers.forEach(function(header) { %>
                            <td><%= row[header] %></td>
                        <% }) %>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Pagination can go here -->
    </div>

    <!-- Link your JS script if necessary -->
    <script src="/js/searchSort.js"></script>
</body>
</html>
